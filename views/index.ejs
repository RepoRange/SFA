    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-green-50 to-green-100 min-h-[80vh]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 items-center py-12">
          <!-- Content - 2 columns -->
          <div class="lg:col-span-2 space-y-8">
            <h1
              class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight"
            >
              Revolutionize Your Farm with AI Technology
            </h1>
            <p class="text-xl text-gray-700">
              Harness the power of artificial intelligence and machine learning
              to transform your agricultural practices and maximize yields.
            </p>
            <div class="space-y-4">
              <a
                href="/api/dashboard"
                class="inline-flex items-center px-8 py-3 bg-white text-green-700 rounded-lg hover:bg-green-50 transition-colors shadow-lg border border-green-300 w-full justify-center hover:border-green-400"
              >
                <svg
                  class="w-5 h-5 mr-3"
                  fill="none"
                  stroke="#16a34a"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
                Already have an account? Login
              </a>

              <div class="relative">
                <div class="absolute inset-0 flex items-center">
                  <div class="w-full border-t border-green-200"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                  <span class="px-2 bg-green-50 text-green-600 font-medium"
                    >Or</span
                  >
                </div>
              </div>

              <a
                href="/auth/google"
                class="inline-flex items-center px-8 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-all duration-200 shadow-lg w-full justify-center hover:shadow-xl"
              >
                <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
                  <path
                    fill="currentColor"
                    d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                  />
                  <path
                    fill="currentColor"
                    d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                  />
                  <path
                    fill="currentColor"
                    d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
